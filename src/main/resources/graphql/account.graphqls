
scalar Money
scalar CharId


type Account {
    id: ID!
    charId: CharId!
    balance: Money!
}


type PersonalLoan {
    id: ID!
    apr: Float
}


# Application's root query
type Query {
    accounts: [Account]!
    personalLoans: [PersonalLoan]!
}


# Application's root mutation
type Mutation {
    createAnAccount(charId: Int!): Account!
    # createPersonalLoan(charId: String!): Account!
}